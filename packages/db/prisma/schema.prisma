generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Zone {
  BUNGALOWS
  TOWER_A
  TOWER_B
  NONE
}

model Post {
  id          String  @id @default(cuid())
  title       String
  description String  @default("")
  zone        Zone    @default(value: NONE)
  price       Int
  images      Image[]
}

model Image {
  id     String @id @default(cuid())
  url    String
  post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@index([postId])
}
